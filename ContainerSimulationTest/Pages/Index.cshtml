@page
@model IndexModel
@{
    ViewData["Title"] = "Smart Container Simulation";
}

<h1>Smart Container Simulation</h1>

<div>
    <label>Container ID: </label>
    <input type="text" id="containerId" placeholder="Enter Container ID" />
</div>
<br />

<div>
    <label>User ID: </label>
    <input type="text" id="userId" placeholder="Enter User ID" />
</div>
<br />

<div>
    <label>Quantity (in kg): </label>
    <input type="number" id="quantity" placeholder="Enter Quantity" min="0" />
</div>
<br />

<br />
<button id="startCycleButton">Start Cycle</button>
<button id="generateQrCodeButton">Generate QR Code</button>
<button id="createTransactionButton">Create Transaction</button>

<br />
<div id="qrCode">QR Code will appear here</div>
<br />

<div id="calculatedValue">Calculated Value will appear here</div>
<br />

<div id="transactionStatus">Transaction Status will appear here</div>
<br />

<div id="qrCodeScanStatus">QR Code Scan Status will appear here</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.9/signalr.min.js"></script>
<script src="/js/containerHub.js"></script>
