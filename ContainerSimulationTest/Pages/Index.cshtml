@page
@model IndexModel
@{
    ViewData["Title"] = "Container Scanner";
}

<h1>Container Scanner</h1>

<label for="containerIdInput">Container ID:</label>
<input type="text" id="containerIdInput" placeholder="Enter Container ID" />

<label for="userIdInput">User ID:</label>
<input type="text" id="userIdInput" placeholder="Enter User ID" />

<button id="generateQRCodeBtn">Generate QR Code</button>
<button id="createTransactionBtn">Create Transaction</button>

<div id="notifications"></div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.7/signalr.min.js"></script>
    <script src="~/js/containerHub.js"></script>
}
